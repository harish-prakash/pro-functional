{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "@config/pkg-template",
    "version": "0.0.1",
    "private": true,
    "author": {
        "name": "Harish Prakash",
        "email": "harish.email@icloud.com",
        "url": "https://harish-prakash.github.io/"
    },
    "scripts": {
        "build": "esbuild src/index.ts --bundle --outdir=dist --sourcemap --minify --tsconfig=tsconfig.build.json",
        "clean": "rimraf ./dist"
    },
    "license": "MIT",
    "type": "module",
    "description": "Tools to simplify pure functions",
    "keywords": [
        "functional",
        "programming",
        "tools",
        "utilities",
        "pure functions"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/harish-prakash/pro-functional.git",
        "directory": "config/pkg-template"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "main": "./dist/src/index.ts",
    "types": "./dist/src/index.d.ts",
    "files": [
        "./dist"
    ],
    "exports": {
        ".": {
            "node": "./dist/src/index.ts",
            "types": "./dist/src/index.d.ts",
            "import": "./dist/src/index.ts",
            "default": "./dist/src/index.ts"
        }
    },
    "devDependencies": {
        "esbuild": "0.24.2",
        "rimraf": "6.0.1"
    }
}
