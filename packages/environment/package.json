{
    "$schema": "https://json.schemastore.org/package.json",
    "name": "@pro-functional/environment",
    "version": "0.1.11",
    "author": {
        "name": "Harish Prakash",
        "email": "harish.email@icloud.com",
        "url": "https://harish-prakash.github.io/"
    },
    "scripts": {
        "build:base": "esbuild src/index.ts --sourcemap --bundle --packages=external --minify --tsconfig=tsconfig.build.json",
        "build:cjs": "yarn build:base --outfile=dist/cjs/index.cjs --format=cjs",
        "build:esm": "yarn build:base --outfile=dist/esm/index.mjs --format=esm",
        "build:cjs-types": "tsc --project tsconfig.cjs.json",
        "build:esm-types": "tsc --project tsconfig.esm.json",
        "build": "yarn build:cjs && yarn build:cjs-types && yarn build:esm && yarn build:esm-types",
        "clean": "rimraf ./dist"
    },
    "license": "MIT",
    "description": "Tools to simplify pure functions",
    "keywords": [
        "functional",
        "programming",
        "tools",
        "utilities",
        "pure functions"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/harish-prakash/pro-functional.git",
        "directory": "packages/environment"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org/"
    },
    "main": "./dist/cjs/index.cjs",
    "module": "./dist/esm/index.mjs",
    "types": "./dist/cjs/src/index.d.ts",
    "files": [
        "./dist",
        "!**/tsconfig.build.tsbuildinfo"
    ],
    "exports": {
        ".": {
            "require": {
                "types": "./dist/cjs/src/index.d.ts",
                "default": "./dist/cjs/index.cjs"
            },
            "import": {
                "types": "./dist/esm/src/index.d.ts",
                "default": "./dist/esm/index.mjs"
            },
            "default": {
                "types": "./dist/esm/src/index.d.ts",
                "default": "./dist/esm/index.mjs"
            }
        }
    },
    "devDependencies": {
        "@types/node": "24.3.1",
        "esbuild": "0.24.2",
        "rimraf": "6.0.1",
        "typescript": "5.7.3"
    },
    "dependencies": {
        "@pro-functional/basic": "workspace:*"
    }
}
